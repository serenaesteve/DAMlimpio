‚Äã
def get_db() -> sqlite3.Connection:
    conn = sqlite3.connect(DB_PATH)
    conn.row_factory = sqlite3.Row
    return conn
‚Äã
def init_db() -> None:
    with get_db() as conn:
        conn.execute("""
        CREATE TABLE IF NOT EXISTS books (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            title TEXT NOT NULL,
            author TEXT NOT NULL,
            year INTEGER,
            created_at TEXT NOT NULL
        )
        """)
        cur = conn.execute("SELECT COUNT(*) AS c FROM books")
        if cur.fetchone()["c"] == 0:
            now = datetime.utcnow().isoformat()
            conn.executemany(
                "INSERT INTO books (title, author, year, created_at) VALUES (?,?,?,?)",
                [
                    ("El Quijote", "Miguel de Cervantes", 1605, now),
                    ("Cien a√±os de soledad", "Gabriel Garc√≠a M√°rquez", 1967, now),
                    ("La sombra del viento", "Carlos Ruiz Zaf√≥n", 2001, now),
                ],
            )
‚Äã
