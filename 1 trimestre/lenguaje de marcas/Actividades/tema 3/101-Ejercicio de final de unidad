  <script>
    fetch('micurriculum.json')
      .then(res => res.json())
      .then(data => {
        
        document.getElementById('nombre').textContent = data.nombre;
        document.getElementById('perfil').textContent = data.perfil;
        document.getElementById('email').textContent = `üìß Email: ${data.contacto.email}`;
        document.getElementById('telefono').textContent = `üìû Tel√©fono: ${data.contacto.telefono}`;
        document.getElementById('ubicacion').textContent = `üìç Ubicaci√≥n: ${data.contacto.ubicacion}`;

       
        const formacionList = document.getElementById('formacion');
        data.formacion.forEach(f => {
          const li = document.createElement('li');
          li.textContent = `${f.titulo} ‚Äì ${f.centro} (${f.a√±os})`;
          formacionList.appendChild(li);
        });

      
        const experienciaDiv = document.getElementById('experiencia');
        data.experiencia.forEach(e => {
          const h3 = document.createElement('h3');
          const periodo = e.periodo || e.duraci√≥n || '';
          h3.textContent = `${e.puesto} ‚Äì ${e.empresa} (${periodo})`;
          experienciaDiv.appendChild(h3);
          const ul = document.createElement('ul');
          e.tareas.forEach(t => {
            const li = document.createElement('li');
            li.textContent = t;
            ul.appendChild(li);
          });
          experienciaDiv.appendChild(ul);
        });

        
        const idiomasList = document.getElementById('idiomas');
        for (const [idioma, nivel] of Object.entries(data.idiomas)) {
          const li = document.createElement('li');
          li.textContent = `${idioma.charAt(0).toUpperCase() + idioma.slice(1)}: ${nivel}`;
          idiomasList.appendChild(li);
        }

     
        const fcList = document.getElementById('formacionComplementaria');
        data.formacion_complementaria.forEach(fc => {
          const li = document.createElement('li');
          li.textContent = fc;
          fcList.appendChild(li);
        });

        
        const ocList = document.getElementById('otrasCompetencias');
        data.otras_competencias.forEach(oc => {
          const li = document.createElement('li');
          li.textContent = oc;
          ocList.appendChild(li);
        });
      })
      .catch(err => console.error('Error cargando JSON:', err));
  </script>
